<Window x:Class="RegionalRepres.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegionalRepres"
        mc:Ignorable="d"
        Title="Главное окно" Height="323" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/View/Warframe0000.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch"  HorizontalAlignment ="Stretch" Margin="10,10,10,10" Grid.ColumnSpan="2" >
            <StackPanel.Background>
                <ImageBrush/>
            </StackPanel.Background>
            <Button x:Name="BtEmployee" Content="Сотрудники" Height="50" Width="150"
 HorizontalAlignment="Center" VerticalAlignment="Top"
 Margin="5,10,10,5" IsDefault="True" Click="BtEmployee_Click"/>
            <Button x:Name="BtRegion" Content="Область" Height="50" Width="150"
 HorizontalAlignment="Center" VerticalAlignment="Top"
 Margin="5,10,10,5" IsDefault="True" Click="BtRegion_Click"/>
            <Button x:Name="BtTerritory" Content="Город" Height="50" Width="150"
 HorizontalAlignment="Center" VerticalAlignment="Top"
 Margin="5,10,10,5" IsDefault="True" Click="BtTerritory_Click"/>
            <Button x:Name="BtEmployeeTerritory" Content="Территория сотрудников" Height="50" Width="150"
 HorizontalAlignment="Center" VerticalAlignment="Top"
 Margin="5,10,10,5" IsDefault="True" Click="BtEmployeeTerritory_Click"/>
        </StackPanel>
    </Grid>

</Window>
